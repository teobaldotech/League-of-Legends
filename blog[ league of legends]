  <script>
    function toggleComments() {
      const section = document.getElementById('commentSection');
      section.style.display = section.style.display === 'none' ? 'block' : 'none';
    }

    function saveComment() {
      const input = document.getElementById('commentInput');
      const comment = input.value.trim();
      if (comment.replace(/\s/g, '').length > 0) {
        const comments = JSON.parse(localStorage.getItem('ebooComments') || '[]');
        comments.push(comment);
        localStorage.setItem('ebooComments', JSON.stringify(comments));
        input.value = '';
        renderComments();
      }
    }

    function renderComments() {
      const comments = JSON.parse(localStorage.getItem('ebooComments') || '[]');
      const list = document.getElementById('commentList');
      list.innerHTML = comments.map(c => `<div class="comment">${c}</div>`).join('');
    }

    function fetchNews() {
      const newsSection = document.getElementById('newsSection');
      const news = [
        {
          title: "🎉 Runeterra Fan Fest confirmado!",
          content: "Evento acontece nos dias 27 e 28 de setembro em SP com influenciadores e ativações exclusivas."
        },
        {
          title: "🥔 Pringles lança sabores inspirados em campeãs",
          content: "Chicken Oriental (Leona) e Spicy Mayo (Mel) chegam como edições limitadas."
        },
        {
          title: "🌍 Mundial 2024 se aproxima",
          content: "Equipes do mundo todo se preparam para disputar o troféu em outubro."
        }
      ];
      newsSection.innerHTML = news.map(n => `
        <p><strong>${n.title}</strong><br>${n.content}</p>
      `).join('');
    }

    window.onload = () => {
      renderComments();
      fetchNews();
    };
  </script>
